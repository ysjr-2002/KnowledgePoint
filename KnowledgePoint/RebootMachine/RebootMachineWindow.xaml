<Window x:Class="KnowledgePoint.RebootMachine.RebootMachineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KnowledgePoint.RebootMachine"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="RebootMachineWindow"
        Width="300"
        Height="300"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Click="Button_Click1" Content="Reboot Machine(Shutdown)" Grid.Row="0" />
        <Button Click="Button_Click2" Content="Reboot Machine(ExitWindowEx)" Grid.Row="1" />
    </Grid>
</Window>
