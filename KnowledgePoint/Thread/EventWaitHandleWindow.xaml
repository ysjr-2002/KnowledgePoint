<Window x:Class="KnowledgePoint.Thread.EventWaitHandlerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KnowledgePoint.Thread"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="EventHandlerWindow"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="30" />
            </Style>
        </StackPanel.Resources>
        <Button Click="Button_Click" Content="Manual Set" />
        <Button Click="Button1_Click" Content="Auto Set" />
    </StackPanel>
</Window>
