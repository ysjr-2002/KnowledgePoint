<Window x:Class="KnowledgePoint.BaseControl.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KnowledgePoint.BaseControl"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="PasswordWindow"
        Width="300"
        Height="300"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <StackPanel Margin="10">
        <Label Content="this is a password(default passwordChar)" />
        <PasswordBox />

        <Label Content="this is a password(cutome passwordChar)" />
        <PasswordBox Name="xp" PasswordChar="*" />

        <Label Name="lbl" local:AttachProperty.MyValue="20" Content="Have Attach Property" />

        <Label Name="lbl1"></Label>

        <Button Click="Button_Click" Content="Get Attach Value" />

        <Button Click="Button_Click_1" Content="Set Attach Value" />
    </StackPanel>
</Window>
