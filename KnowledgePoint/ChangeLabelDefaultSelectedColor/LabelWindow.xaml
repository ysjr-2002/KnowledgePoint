<Window x:Class="KnowledgePoint.ChangeLabelDefaultSelectedColor.LabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KnowledgePoint.ChangeLabelDefaultSelectedColor"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="LabelWindow"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <Grid>
        <Label Width="200"
               Height="30"
               Content=" this is a label">
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="#ff3e95c3" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
    </Grid>
</Window>
